 <!DOCTYPE html>
 <html lang="en">
 <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel='stylesheet' href="/bootstrap/dist/css/bootstrap.min.css" />
    <link rel='stylesheet' href="/@fortawesome/fortawesome-free/css/all.min.css" />
    <link rel='stylesheet' href="/content/app.css" />
 </head>
 <body>

 
 
  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row -->
                <tr class="d-flex">
                    <th class="text-center col-2">Name</th>
                    <th class="text-center col-2">Developer</th>
                    <th class="text-center col-1">Released</th>
                    <th class="col-6">Description</th>
                    <th class="text-center col-1">Price</th>
                </tr>
                <!-- Repeatable Template Row -->
                <% for(let count = 0; count < GameList.length; count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-2"><%= GameList[count].name %></td>
                        <td class="text-center col-2"><%= GameList[count].developer %></td>
                        <td class="text-center col-1"><%= GameList[count].released %></td>
                        <td class="col-6"><%= GameList[count].description %></td>
                        <td class="text-center col-1"><%= GameList[count].price %></td>
                    </tr>
                <% } %>
            </table>
        </div> 
      </main>
        <script src="/jquery/dist/jquery.min.js"></script>
        <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="/Scripts/app.js"></script>
    </div>
 
</body>
</html>
